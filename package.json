{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "nohoist": [
    "**/parse-entities/**",
    "**/unist-builder/**"
  ],
  "scripts": {
    "example": "wrap () { yarn workspace example-\"$*\" dev | cat; }; wrap",
    "storybook": "start-storybook -p 6006",
    "dev": "yarn run build && concurrently \"yarn storybook\" \"yarn workspace nuxt-app dev\"",
    "clean": "git clean -dfx && git reset --hard && yarn",
    "build": "lerna run build --ignore docs",
    "build:ripple": "lerna run build --scope @dpc-sdp/ripple*",
    "build:examples": "lerna run build --scope nuxt-app --scope vue-app --scope webcomponents",
    "build:docs": "lerna run build --scope docs",
    "build:storybook": "build-storybook",
    "postinstall": "patch-package&&husky install&&yarn build:ripple",
    "release:dev": "lerna publish --canary minor --preid alpha --no-git-tag-version --registry $NPM_REGISTRY --dist-tag next",
    "release:prod": "lerna publish --conventional-commits --create-release github",
    "lint": "eslint . --ext .ts,.vue && yarn workspace @dpc-sdp/ripple-ui-core stylelint \"**/*.css\"",
    "test:unit": "jest --colors",
    "test:storybook": "test-storybook --stories-json",
    "test:storybook-ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && yarn test:storybook\"",
    "test:nuxt-app": "API_URL=http://localhost:3001 start-test 'yarn workspace nuxt-app dev' 3000 'yarn workspace nuxt-app cy:open'",
    "ci:nuxt-app": "API_URL=http://localhost:3001 start-test 'yarn workspace nuxt-app start' 3000 'yarn workspace nuxt-app cy:run --reporter junit --reporter-options \"mochaFile=test/results/cypress-output.xml\"'",
    "start:nuxt": "yarn workspace nuxt-app start",
    "start:vue": "yarn workspace vue-app start",
    "start:wc": "yarn workspace webcomponents start",
    "dev:nuxt": "yarn workspace nuxt-app dev",
    "dev:vue": "yarn workspace vue-app dev",
    "dev:wc": "yarn workspace webcomponents dev",
    "cypress": "cypress open --global",
    "chromatic": "npx chromatic --storybook-base-dir ./packages/ripple-ui-core --storybook-config-dir ./packages/ripple-ui-core",
    "generate:component": "hygen component new",
    "generate:content-type": "hygen content-type new"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@badeball/cypress-cucumber-preprocessor": "^13.0.2",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.5",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@outlinestudio/designtokenscss": "^1.0.7",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-cssresources": "^6.2.9",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-jest": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/addon-postcss": "^3.0.0-alpha.1",
    "@storybook/builder-vite": "^0.2.4",
    "@storybook/builder-webpack4": "^6.5.10",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack4": "^6.5.10",
    "@storybook/test-runner": "^0.8.0",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/vue3": "^6.5.10",
    "@testing-library/vue": "^6.5.1",
    "@types/jest": "^29.1.2",
    "@types/react": "file:stub/types__react",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.1.2",
    "babel-loader": "^8.2.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "cypress": "^10.9.0",
    "detab": "^3.0.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-vue": "^9.6.0",
    "husky": "^8.0.1",
    "hygen": "^6.2.11",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lerna": "^5.6.2",
    "patch-package": "^6.4.7",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.0",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.2",
    "start-server-and-test": "^1.14.0",
    "storybook-addon-designs": "^6.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "unist-builder": "^3.0.0",
    "vite": "~3.1.6",
    "vue-eslint-parser": "^9.1.0",
    "vue-loader": "^17.0.0"
  },
  "engines": {
    "node": "^14.16.0 || ^16.11.0 || ^17.0.0"
  },
  "dependencies": {
    "@vue/vue3-jest": "^29.1.0",
    "concurrently": "^7.4.0",
    "rimraf": "^3.0.2",
    "vue-jest": "^3.0.7"
  },
  "resolutions": {
    "**/trim": "~1.0.1",
    "**/trim-newlines": "~3.0.1",
    "**/cpy/**/glob-parent": "~6.0.2",
    "**/lerna/**/axios": "~0.27.2",
    "**/lerna/**/parse-url": "~8.1.0",
    "**/postcss-for/**/postcss": "~7.0.36",
    "**/vite-plugin-vue-svg/**/nth-check": "~2.1.1",
    "**/vite-plugin-svg-icons/**/postcss": "~8.4.17",
    "**/watchpack-chokidar2/**/glob-parent": "~6.0.2",
    "@types/react": "file:stub/types__react"
  },
  "version": "0.0.0"
}
