{
  "name": "root",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "nohoist": [
    "**/parse-entities/**",
    "**/unist-builder/**"
  ],
  "scripts": {
    "example": "wrap () { yarn workspace example-\"$*\" dev | cat; }; wrap",
    "storybook": "yarn workspace @dpc-sdp/ripple-ui-core start-storybook -p6006",
    "storybook:ui": "yarn workspace @dpc-sdp/ripple-ui-core start-storybook -p6010 --no-open",
    "storybook:ui-build": "yarn workspace @dpc-sdp/ripple-ui-core storybook:build",
    "storybook:compose": "concurrently \"yarn storybook:ui\" \"start-storybook -p 6006\"",
    "storybook:build": "build-storybook",
    "dev": "yarn run build && concurrently \"yarn workspace @dpc-sdp/ripple-ui-core watch\" \"yarn workspace @dpc-sdp/ripple-tide-api watch\" \"yarn storybook\" \"yarn workspace nuxt-app dev\"",
    "clean": "git clean -dfx && git reset --hard && yarn",
    "build": "lerna run build",
    "build:ripple": "lerna run build --scope @dpc-sdp/ripple*",
    "build:examples": "lerna run build --scope nuxt-app vue-app webcomponents",
    "build:docs": "lerna run build --scope docs",
    "postinstall": "patch-package&&husky install",
    "release:dev": "lerna publish --canary minor --preid alpha --no-git-tag-version --registry $NPM_REGISTRY --dist-tag next",
    "release:prod": "lerna publish --conventional-commits --create-release github",
    "lint": "eslint . --ext .ts,.vue && yarn workspace @dpc-sdp/ripple-ui-core stylelint \"**/*.css\"",
    "test:unit": "jest --colors",
    "chromatic": "npx chromatic --storybook-base-dir ./packages/ripple-ui-core --storybook-config-dir ./packages/ripple-ui-core",
    "generate:component": "hygen component new",
    "generate:content-type": "hygen content-type new"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-junit": "^1.0.1",
    "eslint-plugin-storybook": "^0.5.11",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "hygen": "^6.2.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "patch-package": "^6.4.7",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "vue-eslint-parser": "^8.3.0"
  },
  "engines": {
    "node": "^14.16.0 || ^16.11.0 || ^17.0.0"
  },
  "dependencies": {
    "@types/react": "file:.stub/types__react",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "concurrently": "^7.0.0",
    "rimraf": "^3.0.2",
    "vue-jest": "^3.0.7"
  },
  "version": "0.0.0"
}
