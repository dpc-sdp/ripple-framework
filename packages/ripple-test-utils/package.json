    "@frsource/cypress-plugin-visual-regression-diff": "^3.3.10",
    "@testing-library/cypress": "^9.0.0",
    "cypress": "^12.8.1",
    "mockttp": "^3.9.1",
    "start-server-and-test": "^2.0.0"
  }
}
